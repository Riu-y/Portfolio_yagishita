<!DOCTYPE html>
<html>
  <head>
    <title>PortfolioYagishita</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!-- ヘッダー -->
  <header>
    <div class="row">
      <div class="col-xs-2 col-xs-offset-1">
         <nav class="nav navbar-nav ">
           <h3><%= link_to image_tag('logo.png',width:'70'),homes_index_path %>&emsp;Ader</h3>
          </nav>
      </div>
      <div class="col-xs-3">
        <% if ad_client_signed_in? %>
          <div class="search-form" style="margin-top: 30px;">
              <%= form_tag(search_ad_client_path, method: :get) do %>
                <%= select_tag 'search[model]', options_for_select({"ドライバー名" => "driver","都市名" => "address"}) %>
                <%= text_field_tag 'search[content]' %>
                <%= submit_tag 'Search',class: "fa fa-search" %>
              <% end %>
          </div>
        </form>
        <% elsif driver_signed_in? %>
          <div class="search-form" style="margin-top: 30px;">
            <%= form_tag(search_driver_path, method: :get) do %>
              <%= select_tag 'search[model]',options_for_select({"広告" => "ad","広告主" => "ad_client"}) %>
                <%= text_field_tag 'search[content]' %>
                <%= submit_tag 'Search', class: "fa fa-search"%>
              <% end %>
          </div>
        <% end %>
      </div><!-- nav-search -->
      <!-- ヘッダーメニュー -->
      <div class="col-xs-5">
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if ad_client_signed_in? %>
              <li><%= link_to "フォロードライバー",followings_ad_client_path(current_ad_client) %></li>
              <li><%= link_to "お知らせ",followings_ad_client_path(current_ad_client) %></li>
              <li><%= link_to "マイぺージ",dashboard_ad_client_path(current_ad_client) %></li>
              <li><%= link_to "お問い合わせ",new_contact_path %></li>
              <li><%= link_to "ログアウト",destroy_ad_client_session_path(current_ad_client), method: :delete %></li>
            <% elsif driver_signed_in? %>
              <li><%= link_to "お気に入り",favorite_search_ad_path(current_driver) %></li>
              <li><%= link_to "お知らせ",favorite_search_ad_path(current_driver) %></li>
              <li><%= link_to "マイぺージ",dashboard_driver_path(current_driver) %></li>
              <li><%= link_to "お問い合わせ",new_contact_path %></li>
              <li><%= link_to "ログアウト",destroy_driver_session_path, method: :delete %></li>
            <% elsif admin_signed_in?%>
              <li><%= link_to "広告 一覧",ads_path %></li>
              <li><%= link_to "ドライバー 一覧",drivers_path %></li>
              <li><%= link_to "広告主 一覧",ad_clients_path %></li>
              <li><%= link_to "問い合わせ一覧",admins_contacts_path %></li>
              <li><%= link_to "ログアウト",destroy_admin_session_path(current_admin), method: :delete %></li>
            <% else %>
              <li><%= link_to "About Ader",homes_about_path %></li>
              <li><%= link_to "ドライバーになる",new_driver_registration_path %></li>
              <li><%= link_to "広告主になる",new_ad_client_registration_path %></li>
              <li><%= link_to "ドライバー ログイン",new_driver_session_path %></li>
              <li><%= link_to "広告主 ログイン",new_ad_client_session_path %></li>
              <li><%= link_to "お問い合わせ",new_contact_path %></li>
            <% end %>

          </ul>
        </nav>
      </div>
    </div>
  </header>
    <!-- エラーメッセージ -->
    <div class="row">
      <div class="col-xs-4 col-xs-offset-1">
        <% if flash[:notice] %>
          <div class="alert alert-success">
            <%= flash[:notice] %>
          </div>
        <% elsif flash[:alert] %>
          <div class="alert alert-danger">
            <%= flash[:alert] %>
          </div>
        <% elsif flash[:error] %>
          <div class="alert alert-danger">
            <%= flash[:error] %>
          </div>
        <% elsif flash[:contact] %>
          <div class="alert alert-success">
            <%= flash[:contact] %>
          </div>
        <% elsif flash[:blank] %> <!-- 未入力エラーに対するメッセージ -->
          <div class="alert alert-success">
            <%= flash[:blank] %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- メイン -->
    <div class="container">
      <%= yield %>
    </div>
  <!-- フッター -->
      <div class="row">
        <div class="col-xs-12">
          <footer>
            <ul class="footer-menu">
               <li>Home</li>
               <li>｜</li>
               <li>About Ader</li>
               <li>｜</li>
               <li>service</li>
               <li>｜</li>
               <li>Contact Us</li>
            </ul>
            <p>&copy;2020 Ader</p>
            <span>Ader&emsp;<%= link_to image_tag('logo2.png',width:'70'),homes_index_path %></span>
            </nav>
          </footer>
        </div>
      </div>
    </div>
  </body>
</html>