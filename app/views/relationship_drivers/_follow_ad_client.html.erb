<% if driver_signed_in? %>
  <% if current_driver.following(ad_client) %>
    <%= link_to 'フォローを外す', relationship_drivers_path(ad_client), method: :delete, remote: :true %>
  <% else %>
    <%= link_to 'フォローする', relationship_drivers_path(ad_client), method: :POST, remote: :true %>
  <% end %>
<% end %>