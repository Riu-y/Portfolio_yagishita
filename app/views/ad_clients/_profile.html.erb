<table class="table">
	<tr id="none-border">
		<td class="text-center image-circle">
			<%= attachment_image_tag ad_client, :profile_image, fallback: "no_image.jpg", class: "image-circle", size: "230x170"%>
		</td>
	</tr>
	<tr id="none-border">
		<td class="text-center">
			<%= ad_client.company_name %> さん
		</td>
	</tr>
	<% if current_ad_client == ad_client %>
	<tr id="none-border">
		<td class="text-center">
			<%= link_to 'プロフィール 編集',edit_ad_client_path(ad_client),class: "btn btn-primary",data: {"turbolinks" => false} %>
		</td>
	</tr>
	<% end %>
</table>