<div class="container">
	<div class="row">
		<div class="col-md-3">
			<%= link_to "新規広告依頼", new_ad_client_ad_path(current_ad_client), class: "btn btn-lg btn-info " %>
		 	<!-- ジャンル一覧 -->
 			<%= render "ads/genre_templete", genres: @genres %>
 		</div>
		<div class="col-xs-8">
			<h2>掲載広告一覧</h2>
				<% i = 0 %>
				<table class="table" id="none-border">
					<% @ads.each do |ad| %>
							<td>
								<%= link_to edit_ad_client_ad_path(ad.ad_client.id,ad.id) do %>
								<%= attachment_image_tag ad,:ad_image, :fill,200,150, fallback: "no_image.jpg", size:'200x160' %><br>
								<%= ad.title %><% end %><br>
								<%= ad.ad_fee %><br>
								<%= ad.heading %>
							</td>
							<% i = i + 1 %>
							<% if i % 3 == 0 %>
							<tr></tr>
						<% end %>
					<% end %>
				</table>
				<%= link_to "トップページに戻る", ad_clients_root_path(current_ad_client) %>
		</div>
	</div>
</div>