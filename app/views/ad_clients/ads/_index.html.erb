<h4>広告 一覧</h4>
	<% i = 0 %>
	<table class="table" id="none-border">
		<% ads.each do |ad| %>
			<td>
				<%= link_to edit_ad_client_ad_path(ad.ad_client.id,ad.id) do %>
				<%= attachment_image_tag ad,:ad_image, fallback: "no_image.jpg", class: "img_wrap", size:'200x160' %><br>
				<%= ad.title %><% end %><br>
				<%= ad.ad_fee %><br>
				<%= ad.heading %>
			</td>
			<% i = i + 1 %>
				<% if i % 3 == 0 %>
				<tr></tr>
			<% end %>
		<% end %>
	</table>
<%= link_to "トップページに戻る", ad_clients_root_path(current_ad_client) %>