<div class="row">
	<div class="col-xs-3">
	<!-- プロフィール -->
		<%= render 'drivers/sidebar', driver: current_driver %><!-- サイドバー -->
	</div>
	<div class="col-xs-9 ">
		<h4>過去の広告詳細</h4>
		<%= render 'under_deals/ad_info', ad: @ad %>
		<%= render 'under_deals/flow_driver', under_deal: @under_deal %>
			<!-- メッセージエリア -->
			<div id="chat-templete" class="chat-area">
				<h4>メッセージ記録</h4><br>
					<% if @messages.blank? %>
						<h4 class="alert">メッセージはありません</h4>
					<% end %>
				<% @messages.each do |message| %>
					<% if message.user_type == 'driver' %>
						<div class="message">
						  <div id="icon" class="faceicon">
						    <%= attachment_image_tag @under_deal.driver, :profile_image, fallback: "no_image.jpg", size:'90X90' %>
						  </div>
						    <div class="chatting">
						     	<div class="says">
						      	<p><%= message.message %></p>
					          <div class="say-data">
					    				<%= message.created_at.to_s(:datetime_jp) %>
					    			</div>
						  	  </div>
						  	</div>
						</div>
					<% else %>
						<div class="message2">
						  <div class="faceicon2">
						    <%= attachment_image_tag @under_deal.ad.ad_client, :profile_image,  fallback: "no_image.jpg", size:'90X90' %>
						  </div>
						    <div class="chatting2">
						     	<div class="says2">
						      	<p><%= message.message %></p>
								    <div class="say-data2">
						    			<%= message.created_at.to_s(:datetime_jp) %>
						    		</div>
						    	</div>
						  	</div>
						</div>
					<% end %>
				<% end %>
			</div>
	</div>
</div>
