<div class="row">
	<div id="report-area">
		<p class="title">やることリスト</p>
		<div class="col-xs-3">
			<table>
				<tr>
					<th>広告取付け完了写真</th>
				</tr>
				<tr>
					<td><%= attachment_image_tag under_deal, :installation_image, :fill, 160, 120, fallback: "no_image.jpg", size: '160x120' %></td>
				</tr>
			</table>
		</div>
		<div class="col-xs-3">
			<table>
				<tr>
					<th>広告キット設置報告</th>
				</tr>
				<tr>
					<td>
						<% if under_deal.work_status == 'sent_kit' %>
							<%= form_for under_deal, url:under_deal_path(under_deal), method: :patch do |f| %>
								<%= f.attachment_field :installation_image %>
								<%= f.submit "設置完了写真をアップロードする", name:'advertising', class: "btn btn-primary " %>
							<% end %>
						<% else %>
							<p class="btn btn-default" disabled="disabled">証明写真のアップロード済み</p>
						<% end %>
					</td>
				</tr>
			</table>
		</div>
		<div class="col-xs-3">
			<table>
				<tr>
					<th>作業完了報告</th>
				</tr>
				<tr>
					<td>
						<% if under_deal.work_status == 'advertising' %>
							<%= form_for under_deal, url:under_deal_path(under_deal), method: :patch do |f| %>
								<%= fields_for deal_detail, url:under_deal_path(under_deal), method: :patch do |d| %>
									<%= d.label :transfer_informations, "振込先の銀行口座を指定する" %>
									<%= collection_select(:detail, :transfer_information_id, driver.transfer_informations.order("id DESC"),:id,:full_info) %>
								<% end %>
							<%= f.submit "広告作業の完了報告をする", name:'completed', class: "btn btn-primary " %>
							<% end %>
						<% elsif under_deal.work_status == 'sent_kit' %>
							<p class="btn btn-default" disabled="disabled">広告作業の完了報告をする</p>
						<% else %>
							<p class="btn btn-default" disabled="disabled">作業の完了報告済み</p>
						<% end %>
					</td>
				</tr>
			</table>
		</div>
		<div class="col-xs-3">
			<table>
				<tr>
					<th>評価</th>
				</tr>
				<tr>
					<td>
						<% if under_deal.work_status == 'deposited' %>
							<%= form_for under_deal, url:under_deal_path(under_deal), method: :patch do |f| %>
							良い 普通 悪い<br>
								<%= f.submit "広告主を評価する", name:'finish', class: "btn btn-primary " %>
							<% end %>
						<% else %>
							<p class="btn btn-default" disabled="disabled">振り込み待ち</p>
						<% end %>
					</td>
				</tr>
			</table>
		</div>
	</div>
</div>
