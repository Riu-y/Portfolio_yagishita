<div class="container">
	<div class="row">
		<div class="col-xs-8">
			<h3>ジャンル新規登録</h3>
				<%= form_for @genre, url: admins_genres_path do |f| %>
				<div class="form-inline">
					<div class="form-group">
						<%= f.label :ジャンル名 %>
						<%= f.text_field :genre_name, autofocus: true, class: "form-controll " %>&emsp;
					</div>
					<div class="form-group">
						<%= f.radio_button :flag_active, :true %>
						<%= f.label :有効 %>&emsp;
					</div>
					<div class="form-group">
						<%= f.radio_button :flag_active, :false %>
						<%= f.label :無効 %>&emsp;
					</div>
					<%= f.submit "新規登録", class: "btn btn-primary"%>
				<% end %><br>
		<!-- ジャンル一覧表示 -->
			<h3>ジャンル一覧</h3>
				<div class = "genre-list">
					<table class="table">
						<thead>
							<tr>
								<th>ジャンル</th>
								<th>状態</th>
								<th colspan="3"></th>
							</tr>
						</thead>

						<tbody>
							<% @genres.each do |genre| %>
							<tr>
								<td><%= genre.genre_name%></td>
								<%if genre.flag_active == true %>
									<td>有効</td>
								<% else %>
									<td>無効</td>
								<% end %>
								<td><%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn btn-success" %>&emsp;
										<%= link_to "削除する", admins_genre_path(genre.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"},class: "btn btn-danger" %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		<%= link_to "前の画面に戻る", admins_genres_path  %>
		</div>
	</div>
</div>