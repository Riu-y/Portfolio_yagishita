<div id="chats">
	<% @chats.each do |chat| %>
		<% if chat.user_type == 'driver' %>
			<div class="message">
			  <div id="icon" class="faceicon">
			    <%= attachment_image_tag @driver.driver, :profile_image, fallback: "no_image.jpg", size:'90X90' %>
			  </div>
			    <div class="chatting">
			     	<div class="says">
			      	<p><%= chat.message %></p>
		          <div class="say-data">
		    				<%= chat.created_at.to_s(:datetime_jp) %>
		    			</div>
			  	  </div>
			  	</div>
			</div>
		<% else %>
			<div class="message2">
			  <div class="faceicon2">
			    <%= attachment_image_tag @ad.ad_client, :profile_image, fallback: "no_image.jpg", size:'90X90' %>
			  </div>
			    <div class="chatting2">
			     	<div class="says2">
			      	<p><%= chat.message %></p>
					    <div class="say-data2">
			    			<%= chat.created_at.to_s(:datetime_jp) %>
			    		</div>
			    	</div>
			  	</div>
			</div>
		<% end %>
	<% end %>
</div>
