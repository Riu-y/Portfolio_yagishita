<div class="message">
	<% @chats.each do |chat| %>
		<% if chat.user_type == 'driver' %>
			<p style="text-align: left;"><%= chat.message %></p>
		<% else %>
			<p style="text-align: right;"><%= chat.message %></p>
		<% end %>
	<% end %>
</div>

<%= form_with model:@chat, url: ad_chats_path, data: {remote: true} do |f| %>
	<%= f.text_area :message %>
	<%= f.hidden_field :room_id %>
	<%= f.hidden_field :user_type, :value => 'driver' %>
	<%= f.submit "送信", class: "btn btn-primary" %>
<% end %>