<div class="row">
  <div class="col-xs-6">
    <h3>問い合わせフォーム</h3>
      <%= form_for @contact, url: confirm_new_contact_path do |f| %>
         <tr>
            <td><%= f.label :お名前 %></td><br>
            <td><%= f.text_field :name, autofocus: true, autocomplete:"", placeholder:"お名前を入力", class: "form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label :会社名 %></td>
            <td><%= f.text_field :company_name, autofocus: true, autocomplete:"", placeholder:"広告店の方は会社名の入力をお願いします", class: "form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label :電話番号 %></td>
            <td><%= f.text_field :telephone_number, autofocus: true, autocomplete:"" , placeholder: "ハイフンは不要です",class: "form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label :メールアドレス  %></td>
            <td><%= f.email_field :email, autofocus: true, placeholder: '半角英数字でご入力ください',class: "form-control"  %></td>
          </tr>
          <tr>
            <td><%= f.label :お問い合わせ内容 %></td>
            <td><%= f.text_area :content, autofocus: true, autocomplete:"", placeholder:"お問い合わせ内容をご入力ください", class: "form-control",:size => "60x10" %></td>
          </tr><br>
          <tr>
            <td class="text-center">
              <%= f.submit "確認画面へ進む", class: "btn btn-primary "%>
            </td>
          </tr>
      <% end %>
    </div>
    <div class="col-xs-6">
      <%= render 'layouts/error_messages', model: @contact %>
    </div>
  </div>
</div>