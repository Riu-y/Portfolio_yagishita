<div class="row">
  <div class="col-xs-6 col-xs-offset-2">
    <h3>問い合わせフォーム</h3>
      <%= form_for @contact, url: confirm_new_contact_path do |f| %>
        <p>
          <%= f.label :お名前 %>
          <%= f.text_field :name, autofocus: true, autocomplete:"", placeholder:"お名前を入力", class: "form-control" %>
        </p>
        <p>
          <%= f.label :会社名 %>
          <%= f.text_field :company_name, autofocus: true, autocomplete:"", placeholder:"広告店の方は会社名の入力をお願いします", class: "form-control" %>
        </p>
        <p>
          <%= f.label :電話番号 %>
          <%= f.text_field :telephone_number, autofocus: true, autocomplete:"" , placeholder: "ハイフンは不要です",class: "form-control" %>
        </p>
        <p>
          <%= f.label :メールアドレス  %>
          <%= f.text_field :email, autofocus: true, placeholder: '半角英数字でご入力ください',class: "form-control"  %>
        </p>
        <p>
          <%= f.label :お問い合わせ内容 %>
          <%= f.text_area :content, autofocus: true, autocomplete:"", placeholder:"お問い合わせ内容をご入力ください", class: "form-control",:size => "60x10" %>
        </p>
        <p>
          <td class="text-center">
            <%= button_tag :type => "submit", class: "btn03" do %><span>確認画面へ進む</span><i class="fas fa-angle-double-right"></i><% end %>
        </p>
      <% end %><br>
        <% if ad_client_signed_in? %>
          <%= link_to dashboard_ad_client_path(current_ad_client) do %><i class="fas fa-angle-left"></i> マイページへ戻る<% end %>
        <% elsif driver_signed_in?%>
          <%= link_to  dashboard_driver_path(current_driver) do %><i class="fas fa-angle-left"></i> トップページに戻る<% end %>
        <% end %>
    </div>
    <div class="col-xs-3">
      <%= render 'layouts/error_messages', model: @contact %>
    </div>
  </div>
</div>