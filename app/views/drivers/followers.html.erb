<div class="row">
	<div class="col-lg-1">
	</div>
	<div class="col-lg-6">
		<h3>  Follower List</h3>
		<table class="table">
			<thead>
				<tr>
					<th>Image</th>
					<th>Name</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @followers.each do |ad_client| %>
					<tr>
						<td><%= attachment_image_tag ad_client, :profile_image, :fill, 80, 80, fallback: "no-image-mini.jpg" %></td>
						<td><%= ad_client.company_name %></td>
						<td><%= link_to ad_client, class: "btn02", data: {"turbolinks" => false} do %><span>詳細<i class="fas fa-arrow-right"></i><% end %></td>

					</tr>
			 <% end %>
			</tbody>
		</table>
	</div>
</div>
