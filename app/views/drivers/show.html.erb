<div class="container">
	<div class="row">
		<div class = "col-xs-6">
				<%= attachment_image_tag @driver, :profile_image,:fill, 230, 170, fallback: "no_image.jpg", size:'230x170'  %><br>
						<% if ad_client_signed_in? %>
	            <% if current_ad_client.following?(@driver) %>
	              <%= link_to 'フォローを外す', ad_client_relationship_path(@driver.id), method: :delete %>
	            <% else %>
	              <%= link_to 'フォローする', ad_client_relationships_path(@driver.id), method: :POST %>
	            <% end %>
						<% end %>
					<table class="table .table-borderless">
						<tr>
							<td>フォロー数：<%= link_to @driver.follower.count, followings_driver_path(@driver) %></td>
      			  <td>フォロワー数：<%= link_to @driver.followed.count, followers_driver_path(@driver) %></td>
						</tr>
						<tr>
							<th>名前</th>
							<td><%= @driver.driver_name %></td>
						</tr>
						<tr>
							<th>名前（カナ）</th>
							<td><%= @driver.driver_name_kana %></td>
						</tr>
						<tr>
							<th>郵便番号</th>
							<td><%= @driver.postal_code %></td>
						</tr>
						<tr>
							<th>住所</th>
							<td><%= @driver.address %></td>
						</tr>
						<tr>
							<th>メールアドレス</th>
							<td><%= @driver.email %></td>
						</tr>
					</table>
		</div>
		<div class = "col-xs-6">
			ここに地図を掲載
		</div>

<div class="row">
    <div class="col-md-12">
      <table class="table ">
	     <h3>登録車情報</h3>
	      <thead>
	        <tr>
	          <td>メーカー名</td>
	          <td>車名</td>
	          <td>ナンバープレート</td>
	          <td>車台番号</td>
	          <td>広告活動地域</td>
	          <td>広告掲載場所</td>
	        </tr>
	      </thead>
	      <tbody>
	       <% @car_informations.each do |c| %>
	        <tr>
	          <td><%= c.manufacturer_name %></td>
	          <td><%= c.car_name %></td>
	          <td><%= c.license_plate %></td>
	          <td><%= c.flame_number %></td>
	          <td>住所から半径100km</td>
	          <td>車両側部&emsp;リアゲート</td>
	        </tr>
	       <% end %>
	      </tbody>
      </table>
    <%= link_to "前の画面へ戻る", drivers_path %>
  </div>
</div>